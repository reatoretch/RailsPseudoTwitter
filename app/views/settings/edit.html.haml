#settings-edit
  .col-xs-6.settings-content
    - @user.errors.each do |attr, message|
      .alert.alert-danger= message
    = form_for @user, url: settings_path, method: :put do |f|
      %h2
        設定
      .form-body
        .form-group
          = f.label :name, "ユーザーID: @sample_jp", class: "control-label"
          = f.text_field :name, class: "form-control"
        .form-group
          = f.label :screen_name, "表示名: サンプル", class: "control-label"
          = f.text_field :screen_name, class: "form-control"
        .form-group
          = f.label :bio, "プロフィール(200文字)", class: "control-label"
          = f.text_area :bio, class: "form-control"
        .form-group
          = f.label :view_allowed, "通常アカウント", value: true, checked: true
          = f.radio_button :view_allowed, true
          = f.label :view_allowed, "鍵アカウント", value: false
          = f.radio_button :view_allowed, false 
        = f.submit "送信する", class: "btn btn-success"
